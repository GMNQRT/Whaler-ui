br
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    .panel.panel-default
      .panel-heading
        .row
          .col-xs-6.col-sm-6.col-md-6.col-lg-6
            h1 {{ctrl.container.info.Name}}
            small image : {{ ctrl.container.info.Config.Image }}
          .col-xs-6.col-sm-6.col-md-6.col-lg-6
            .text-center.pull-right Create at : {{ ctrl.container.info.Created | date:'yyyy-MM-dd HH:mm:ss' }}
            .text-center.pull-right Started at : {{ ctrl.container.info.State.StartedAt  | date:'yyyy-MM-dd HH:mm:ss' }}
            .text-center.pull-right Finished at : {{ ctrl.container.info.State.FinishedAt  | date:'yyyy-MM-dd HH:mm:ss' }}
            .btn-group.pull-right aria-label="..." role="group" 
              a.btn.btn-success ng-href="/container/{{ ctrl.container.id }}/start" ng-if="ctrl.container.info.State.stateNumber == 2"
                span.glyphicon.glyphicon-play aria-hidden="true" 
              a.btn.btn-default ng-href="/container/{{ ctrl.container.id }}/start" ng-if="ctrl.container.info.State.stateNumber != 2"
                span.glyphicon.glyphicon-play aria-hidden="true" 
              a.btn.btn-warning ng-href="/container/{{ ctrl.container.id }}/unpause" ng-if="ctrl.container.info.State.stateNumber == 3"
                span.glyphicon.glyphicon-pause aria-hidden="true" 
              a.btn.btn-default ng-href="/container/{{ ctrl.container.id }}/pause" ng-if="ctrl.container.info.State.stateNumber != 3"
                span.glyphicon.glyphicon-pause aria-hidden="true" 
              a.btn.btn-danger ng-href="/container/{{ ctrl.container.id }}/stop" ng-if="ctrl.container.info.State.stateNumber == 0"
                span.glyphicon.glyphicon-stop aria-hidden="true" 
              a.btn.btn-default ng-href="/container/{{ ctrl.container.id }}/stop" ng-if="ctrl.container.info.State.stateNumber != 0"
                span.glyphicon.glyphicon-stop aria-hidden="true" 
              a.btn.btn-default ng-href="/container/{{ ctrl.container.id }}/restart"
                span.glyphicon.glyphicon-repeat aria-hidden="true" 
              button.btn.btn-danger type="submit" ng-if="ctrl.container.info.State.stateNumber == -1"
                span.glyphicon.glyphicon-alert aria-hidden="true" 
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    .panel.panel-default
      .panel-heading
        h2 Configuration
      .panel-body
        .row
          .col-xs-3.col-sm-3.col-md-3.col-lg-3
            p Pid : {{ ctrl.container.info.State.Pid }}
            p CpuShares : {{ ctrl.container.info.Config.CpuShares }}
            p Cpuset : {{ ctrl.container.info.Config.Cpuset }}
            p Domainname : {{ ctrl.container.info.Config.Domainname }}
            p Entrypoint : {{ ctrl.container.info.Config.Entrypoint }}
            p ExposedPorts :
            ul ng-repeat="(protocol,liens) in ctrl.container.info.Config.ExposedPorts"
              li {{ protocol }}
            p Hostname : {{ ctrl.container.info.Config.Hostname }}
            p User : {{ ctrl.container.info.Config.User }}
          .col-xs-3.col-sm-3.col-md-3.col-lg-3
            p Labels : {{ ctrl.container.info.Config.Labels }}
            p MacAddress : {{ ctrl.container.info.Config.MacAddress }}
            p Memory : {{ ctrl.container.info.Config.Memory }}
            p MemorySwap : {{ ctrl.container.info.Config.MemorySwap }}
            p OnBuild : {{ ctrl.container.info.Config.OnBuild }}
            p PortSpecs : {{ ctrl.container.info.Config.PortSpecs }}
            p Volumes : {{ ctrl.container.info.Config.Volumes }}
            p WorkingDir : {{ ctrl.container.info.Config.WorkingDir }}
          .col-xs-3.col-sm-3.col-md-3.col-lg-3
            table.table.table-bordered
              caption Booleen
              tr
                th NetworkDisabled
                td {{ ctrl.container.info.Config.NetworkDisabled }}
              tr
                th StdinOnce
                td {{ ctrl.container.info.Config.StdinOnce }}
              tr
                th OpenStdin
                td {{ ctrl.container.info.Config.OpenStdin }}
              tr
                th Tty
                td {{ ctrl.container.info.Config.Tty }}
          .col-xs-3.col-sm-3.col-md-3.col-lg-3
            table.table.table-bordered
              caption Attachement
              tr
                th Stderr
                td {{ ctrl.container.info.Config.AttachStderr }}
              tr
                th Stdin
                td {{ ctrl.container.info.Config.AttachStdin }}
              tr
                th Stdout
                td {{ ctrl.container.info.Config.AttachStdout }}
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    .panel.panel-default
      .panel-heading
        h2 Network settings
      .panel-body
        .row
          .col-xs-6.col-sm-6.col-md-6.col-lg-6
            h4 IP
            p Gateway : {{ctrl.container.info.NetworkSettings.Gateway}}
            p Address : {{ctrl.container.info.NetworkSettings.IPAddress}}
            p Prefix Length : {{ctrl.container.info.NetworkSettings.IPPrefixLen}}
          .col-xs-6.col-sm-6.col-md-6.col-lg-6
            h4 IPv6
            p Gateway : {{ctrl.container.info.NetworkSettings.IPv6Gateway}}
            p Address : {{ctrl.container.info.NetworkSettings.GlobalIPv6Address}}
            p Prefix Length : {{ctrl.container.info.NetworkSettings.GlobalIPv6PrefixLen}}
            p Link Local Address : {{ctrl.container.info.NetworkSettings.LinkLocalIPv6Address}}
            p Link Local Prefix Length : {{ctrl.container.info.NetworkSettings.LinkLocalIPv6PrefixLen}}
        hr
        p PortMapping : {{ctrl.container.info.NetworkSettings.PortMapping}}
        p Ports :
        div ng-repeat="(protocol,liens) in ctrl.container.info.NetworkSettings.Ports"
          ul ng-repeat="port in liens"
            li {{ port.HostIp }}:{{ port.HostPort }} -> {{ protocol }}
        ul.nav.nav-pills role="tablist" 
          li.active role="presentation" 
            a href="#" 
              | Bridge
              span.badge {{ctrl.container.info.NetworkSettings.Bridge}}
          li.active role="presentation" 
            a href="#" 
              | Mac Address
              span.badge {{ctrl.container.info.NetworkSettings.MacAddress}}
