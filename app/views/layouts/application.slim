doctype html
html ng-app="whaler"
  head
    base href="/"
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    title WhalerUi
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body class="{{ controller }}" ng-class="{'layouted': controller && controller != 'sessionsCtrl' }" ng-controller="ApplicationController as app"

    nav#main-nav.navbar-default.navbar-static-side role="navigation" ng-class="{collapsed: controller && app.isCollapsed}"
      .sidebar-collapse
        .brand
          = image_tag("brand.png", class: "img-responsive img-circle logo")
        = render_navigation expand_all: true, renderer: :bootstrap

    #page-wrapper.gray-bg
      #topbar
        button.navbar-toggle.pull-left.show type="button" ng-click="app.toggleNav()"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
          
        form#searchForm.navbar-form.navbar-left.pull-left role="search"
          .form-group
            input.form-control type="text" placeholder="Search"
            = fa_icon('search', class: 'pull-left')

        ul.nav.navbar-nav.navbar-right.pull-right
          li.dropdown.user-mail.p-l
            a.dropdown-toggle.text-right href="#" class="" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"
              | #{fa_icon(:user)} <span class="caret m-l"></span>
            ul.dropdown-menu.nav
              li: a href="#" {{ app.getUser().email }}
              li: a href="/signout" #{fa_icon("sign-out")} Sign out
            

      #mobile-backdrop.visible-xs ng-click="app.toggleNav()"
      main.container-fluid ng-view=""

      footer#footer
        .container
          .row
            .col-xs-12
              p.text-right Copyright Â© Whaler 2014 - 2015
