doctype html
html ng-app="whaler"
  head
    base href="/"
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    title WhalerUi
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body class="{{ controller }}" ng-class="{'layouted': controller && controller != 'sessionsCtrl' }" ng-controller="ApplicationController as app"

    nav#main-nav.navbar-default.navbar-static-side role="navigation" ng-class="{collapsed: controller && app.isCollapsed}"
      .sidebar-collapse
        .brand
          = image_tag("brand.png", class: "img-responsive img-circle logo")
          div.user-mail.m-t {{ app.getUser().email }}

        = render_navigation expand_all: true, renderer: :bootstrap

    #page-wrapper.gray-bg
      #topbar
        button.navbar-toggle.pull-left.show type="button" ng-click="app.collapseNav()"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
      .container ng-view=""

    footer
      .container
        .row
          .col-xs-12
            p.text-right Copyright Â© Whaler 2014 - 2015
